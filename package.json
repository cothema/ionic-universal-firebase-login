{
  "name": "ionic-universal-firebase-login",
  "version": "0.3.2",
  "description": "Easy to use universal (browser, Android, iOS) authentication via Firebase for Ionic",
  "author": "Miloš Havlíček",
  "license": "MIT",
  "repository": "https://github.com/cothema/ionic-universal-firebase-login",
  "scripts": {
    "build": "mkdir -p pkg && pika build --verbose && ng build",
    "lint": "tslint -p . --fix",
    "pub": "pika publish",
    "test": "ng test --watch=false --browsers=HeadlessChrome",
    "version": "npm run build"
  },
  "keywords": [
    "ionic",
    "authentication",
    "login",
    "firebase"
  ],
  "@pika/pack": {
    "pipeline": []
  },
  "prepublish": "npm run lint && npm run build",
  "peerDependencies": {
    "firebase": ">=7.6.2",
    "rxjs": ">=6.5.4",
    "@ionic-native/core": ">=5.19.1",
    "@ionic/angular": ">=4.11.7",
    "@angular/fire": ">=5.3.0"
  },
  "optionalDependencies": {
    "@ionic-native/facebook": ">=5.19.1",
    "@ionic-native/google-plus": ">=5.19.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.900.1",
    "@angular-devkit/build-ng-packagr": "~0.900.1",
    "@angular/cli": "^9.0.1",
    "@angular/common": "^9.0.0",
    "@angular/compiler": "^9.0.0",
    "@angular/compiler-cli": "^9.0.0",
    "@angular/core": "^9.0.0",
    "@angular/fire": "^5.3.0",
    "@angular/forms": "^9.0.0",
    "@angular/platform-browser": "^9.0.0",
    "@angular/platform-browser-dynamic": "^9.0.0",
    "@angular/router": "^9.0.0",
    "@babel/plugin-proposal-class-properties": "^7.7.4",
    "@babel/plugin-proposal-decorators": "^7.7.4",
    "@ionic-native/core": ">=5.19.1",
    "@ionic/angular": ">=4.11.7",
    "@pika/cli": "^0.2.0",
    "@pika/pack": "^0.5.0",
    "@pika/plugin-build-node": "^0.9.2",
    "@pika/plugin-build-types": "^0.9.2",
    "@pika/plugin-ts-standard-pkg": "^0.9.2",
    "@types/jasmine": "^3.5.0",
    "@types/node": ">=12.11.1",
    "firebase": "^7.6.2",
    "husky": "^4.0.6",
    "install-peers": "^1.0.3",
    "karma": "^4.4.1",
    "karma-chrome-launcher": "^3.1.0",
    "karma-coverage-istanbul-reporter": "^2.1.1",
    "karma-jasmine": "^3.1.0",
    "karma-jasmine-html-reporter": "^1.5.2",
    "lint-staged": "^10.0.1",
    "ng-packagr": "^9.0.0",
    "prettier": "^1.19.1",
    "puppeteer": "^5.3.1",
    "rxjs": "^6.5.4",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-etc": "^1.10.0",
    "tslint-plugin-prettier": "^2.1.0",
    "typescript": "~3.7.5",
    "zone.js": "~0.10.2",
    "tslib": "^1.10.0"
  },
  "prettier": {
    "trailingComma": "all"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "tslint -p . --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged"
    }
  }
}
